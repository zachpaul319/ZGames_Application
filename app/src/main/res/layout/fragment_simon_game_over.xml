<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimonGameOverFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:text="Sorry, that's incorrect :("
            android:textAlignment="center"
            android:textColor="@color/orange"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/highScoreViewGameOver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="96dp"
            android:text="High Score: 0"
            android:textColor="@color/purple_500"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <Button
            android:id="@+id/simonPlayAgainButton"
            android:layout_width="214dp"
            android:layout_height="66dp"
            android:layout_marginTop="104dp"
            android:backgroundTint="@color/green"
            android:text="Play Again"
            app:layout_constraintEnd_toEndOf="@+id/highScoreViewGameOver"
            app:layout_constraintHorizontal_bias="0.513"
            app:layout_constraintStart_toStartOf="@+id/highScoreViewGameOver"
            app:layout_constraintTop_toBottomOf="@+id/highScoreViewGameOver" />

        <Button
            android:id="@+id/simonGoHomeButton"
            android:layout_width="80dp"
            android:layout_height="42dp"
            android:layout_marginTop="36dp"
            android:backgroundTint="@color/purple_700"
            android:text="Home"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/simonPlayAgainButton"
            app:layout_constraintStart_toStartOf="@+id/simonPlayAgainButton"
            app:layout_constraintTop_toBottomOf="@+id/simonPlayAgainButton" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>